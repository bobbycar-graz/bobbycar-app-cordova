<?xml version='1.0' encoding='utf-8'?>
<widget id="graz.bobbycar.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bobbycar</name>
    <description>
        The official bobbycar app for your very own bobbycar!
    </description>
    <author email="florian+bobbycarapp@commanderred.xyz" href="http://commanderred.xyz/">
        Commander Red - Member of bobbycar-graz
    </author>
    <icon src="www/img/logo.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
